<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/menu_management_logo"
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-100dp"
        android:contentDescription="@string/text_mooing_logo"
        android:src="@drawable/logo_mooing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:viewBindingIgnore="true" />
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_enter_password"
        android:textSize="60sp"
        android:layout_marginStart="@dimen/dimen_280dp"
        android:textColor="@color/black_russian"
        app:layout_constraintTop_toBottomOf="@id/menu_management_logo"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:itemHeight="180dp"
        app:itemWidth="220dp"
        android:textSize="35sp"
        app:itemSpacing="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        android:textColor="@color/black"
        app:lineColor="@color/cornflower_blue"
        android:layout_marginTop="@dimen/dimen_50dp"
        app:itemRadius="@dimen/dimen_22dp"
        app:viewType="rectangle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>