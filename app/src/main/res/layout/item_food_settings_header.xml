<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true">


    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_column="0"
                android:textAlignment="center"
                android:textSize="@dimen/font_size_35sp"
                android:layout_weight="1"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@color/dodger_blue"
                android:text="@string/text_food_settings_id"/>

            <TextView
                android:layout_height="@dimen/dimen_80dp"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:text="@string/text_food_settings_name"
                android:textSize="@dimen/font_size_35sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/dodger_blue"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                />
            <TextView
                android:layout_height="@dimen/dimen_80dp"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:text="@string/text_food_settings_category"
                android:textSize="@dimen/font_size_35sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/dodger_blue"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                />

            <TextView
                android:layout_height="@dimen/dimen_80dp"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="@string/text_food_settings_price"
                android:textSize="@dimen/font_size_35sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/dodger_blue"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>