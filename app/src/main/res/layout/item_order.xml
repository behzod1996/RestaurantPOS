<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="나이트로 바닐라 크림"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:textColor="@color/black_russian"
        android:fontFamily="@font/noto_sans"
        android:textSize="@dimen/font_size_35sp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="48dp"
        android:layout_height="58dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:text="@string/btn_text_decrease"
        android:layout_marginTop="6dp"
        android:textSize="25sp"
        android:paddingStart="@dimen/dimen_2dp"
        android:paddingEnd="@dimen/dimen_2dp"
        android:backgroundTint="@color/lavender_purple"
        app:cornerRadius="@dimen/dimen_10dp"
        />

    <TextView
        android:id="@+id/tv_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_item_order_quantity"
        android:textColor="@color/black_russian"
        android:fontFamily="@font/noto_sans"
        android:textSize="@dimen/font_size_40sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="48dp"
        android:layout_height="58dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:text="@string/text_button_increase"
        android:layout_marginTop="6dp"
        android:textSize="25sp"
        android:paddingStart="@dimen/dimen_2dp"
        android:paddingEnd="@dimen/dimen_2dp"
        android:backgroundTint="@color/lavender_purple"
        app:cornerRadius="@dimen/dimen_10dp"
        />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2100원"
        android:textSize="@dimen/font_size_35sp"
        android:textColor="@color/black_russian"
        android:fontFamily="@font/noto_sans"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        />

</LinearLayout>