<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.menu_settings.MenuSettingsFragment">

    <ImageView
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="700dp"
        android:layout_marginTop="-50dp"
        android:contentDescription="@string/text_mooing_logo"
        android:src="@drawable/logo_mooing" />

    <ImageView
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_80dp"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/text_back"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_management"
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_80dp"
        android:layout_marginBottom="@dimen/dimen_800dp"
        android:backgroundTint="@color/cornflower_blue"
        android:drawableTop="@drawable/ic_menu_settings"
        android:fontFamily="@font/noto_sans"
        android:paddingTop="60dp"
        android:text="@string/text_menu_management"
        android:textSize="@dimen/font_size_60sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dimen_40dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_settings"
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_800dp"
        android:backgroundTint="@color/cornflower_blue"
        android:drawableTop="@drawable/ic_option_settings"
        android:fontFamily="@font/noto_sans"
        android:paddingTop="@dimen/dimen_60dp"
        android:text="@string/text_option_settings"
        android:textSize="@dimen/font_size_60sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dimen_40dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/cornflower_blue"
        android:drawableTop="@drawable/ic_exit"
        android:paddingTop="@dimen/dimen_60dp"
        android:text="@string/text_app_exit"
        android:textSize="@dimen/font_size_60sp"
        android:layout_marginBottom="@dimen/dimen_300dp"
        android:layout_marginStart="@dimen/dimen_350dp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dimen_40dp" />
</RelativeLayout>