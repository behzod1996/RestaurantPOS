<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.menu_settings.MenuSettingsFragment">

    <ImageView
        android:id="@+id/menu_management_logo"
        android:layout_width="120dp"
        android:layout_height="@dimen/dimen_120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-23dp"
        android:contentDescription="@string/text_mooing_logo"
        android:src="@drawable/logo_mooing"
        tools:viewBindingIgnore="true"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_management"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/text_menu_management"
        android:textSize="@dimen/font_size_20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_settings"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/text_option_settings"
        android:textSize="@dimen/font_size_20sp"
        android:textStyle="bold" />
</RelativeLayout>