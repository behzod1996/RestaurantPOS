<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestaurantPOS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppFullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_16dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_16dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_40dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_40dp</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>

    <style name="DropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textSize">30sp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_20dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_20dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_20dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_20dp</item>
    </style>

    <style name = "TableLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">40sp</item>
        <item name="paddingEnd">@dimen/dimen_10dp</item>
        <item name="paddingStart">@dimen/dimen_10dp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20dp</item>
    </style>

</resources>